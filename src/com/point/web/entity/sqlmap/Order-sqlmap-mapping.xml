<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
	<mapper namespace="com.point.web.dao.OrderDao">

	<resultMap id="resultOrder" type="order" >
		<id column="ORDERID" property="orderId"/>
		<result column="PHONE" property="phone"/>
		<result column="ITEMID" property="itemId"/>
		<result column="TITLE" property="title"/>
		<result column="PRICE" property="price"/>
		<result column="QUANTITY" property="quantity"/>
		<result column="FINALFEE" property="finalFee"/>
		<result column="DISCOUNT" property="discount"/>
		<result column="CREATETIME" property="createTime"  javaType="java.util.Date" />
	</resultMap>
	
	<select id="get" resultMap="resultOrder" parameterType="string">
		SELECT O.ORDERID,O.PHONE,O.ITEMID,O.TITLE,O.PRICE,O.QUANTITY,O.FINALFEE,O.DISCOUNT,O.CREATETIME
	    FROM BLQL_ORDER O
		WHERE O.ORDERID = #{orderid}
	</select>
	

	<select id="getNextSysNo" resultType="long" >
		SELECT SEQ_ORDER.NEXTVAL 
	    FROM DUAL
	</select>
	

	<select id="getSysTime"  resultType="string">
		SELECT TO_CHAR(SYSDATE,'yyyy-MM-dd HH24:mi:ss') FROM DUAL
	</select>
	
	
	<insert id="save" parameterType="order">
        	insert into BLQL_ORDER (ORDERID,PHONE,ITEMID,TITLE,PRICE,QUANTITY,FINALFEE,DISCOUNT,CREATETIME) values(#{orderid},#{phone},#{itemid},#{title},#{price},#{quantity},#{finalfee},#{discount},sysdate) 
	</insert>
	
	<select id="findByCreateDate"  resultType="order">
		<![CDATA[
			SELECT * FROM (SELECT * FROM BLQL_ORDER) 
	]]>
		<where>
			1=1
			<if test="startDate != null and startDate != ''">
				and CREATETIME >= #{startdate}
			</if>
			<if test="endDate != null and endDate != ''">
				and CREATETIME &lt;= #{enddate}
			</if>
			<if test="phone != null and phone != ''">
				and PHONE = #{phone}
			</if>
			
		</where>
	</select>
	
</mapper>