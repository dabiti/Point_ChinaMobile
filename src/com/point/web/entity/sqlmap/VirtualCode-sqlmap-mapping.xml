<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
	<mapper namespace="com.point.web.dao.VirtualCodeDao">

	<resultMap id="resultVirtualcode" type="virtualcode" >
		<id column="ORDERID" property="orderid"/>
		<result column="VCODE" property="vcode"/>
		<result column="STATUS" property="status"/>
		<result column="CREATETIME" property="createtime"/>
	</resultMap>
	
	
	<select id="get" resultMap="resultVirtualcode" parameterType="string">
		SELECT O.ORDERID,O.VCODE,O.VCODEPASS,O.STATUS,O.CREATEDATE,O.CREATETIME
	    FROM VIRTUALCODE O
		WHERE O.ORDERID = #{orderid}
	</select>
	
	<insert id="save" parameterType="virtualcode">
        	insert into VIRTUALCODE (ORDERID,VCODE,VCODEPASS,STATUS,CREATETIME) values(#{orderid},#{vcode},#{vcodepass},#{status},sysdate) 
	</insert>
	
	
	<update id="updateStatus" parameterType="map">
        	update VIRTUALCODE set STATUS=#{status} WHERE ORDERID= #{orderid}
	</update>
	
</mapper>